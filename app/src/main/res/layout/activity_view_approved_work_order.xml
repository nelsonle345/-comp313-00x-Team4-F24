<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="Shovel Hero Logo"
            android:src="@drawable/logo_color"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/lblWorkOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Order Details"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/workOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Order ID: 12345"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/workOrderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: Snow removal for driveway and walkway."
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/workOrderLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: 123 Main Street, Toronto"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/workOrderPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority: Urgent"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Comments (optional)"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:minLines="3"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/approveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/declineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:backgroundTint="#F44336"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>