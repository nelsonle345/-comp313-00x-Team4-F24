<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_color"
            android:contentDescription="Shovel Hero Logo"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/lblRequestedWorkOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requested Work Order"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/requestedWorkOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Order ID: 98765"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/requestedWorkOrderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: Snow shoveling services."
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/requestedWorkOrderLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: 456 Elm Street, Toronto"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/requestedWorkOrderPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority: Medium"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/requestedWorkOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending Approval"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etViewComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comments (optional)"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:minLines="3"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/editButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#2196F3"
                android:text="Edit" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close"
                android:backgroundTint="#9E9E9E"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/lblRequestDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Request Details"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/requestDetailsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service requested for the front driveway."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name:"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/clientContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Contact:"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/contactClientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Client"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
