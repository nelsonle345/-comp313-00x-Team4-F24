<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Work Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvWorkOrderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Order Details"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWorkOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Order ID: null"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCancellationReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter reason for cancellation (optional)"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvCancellationDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancellation is disabled because you have not arrived on-site."
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCancelWorkOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Work Order"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
